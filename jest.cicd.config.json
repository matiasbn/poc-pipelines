{
    "testEnvironment": "node",
    "verbose": true,
    "roots": [
        "tests/unit"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": -10
        }
    },
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/.aws-sam/"
    ]
}